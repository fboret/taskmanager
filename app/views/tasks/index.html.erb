<h1>Voici toutes tes tâches</h1>

<ul>

  <% @tasks.each do |task| %>
    <li><%= task.id %> : <%= task.name %> <%= task.description %> </li>
    <li> Proirité : <%= task.priority %> Status : <%= task.status %> </li>
    <li> <%= link_to "See task", task_path(task) %>  <%= link_to "Edit", edit_task_path(task) %> <%= link_to "Delete", task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" } %> </li>
        <p></p>
  <% end %>

<li> <%= link_to"Create a new task", new_task_path %></li>

</ul>